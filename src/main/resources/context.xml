<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/aop
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">


    <bean id="customerRepository" class="pl.com.bohdziewicz.tutorials.aop.CustomerRepositoryImpl"/>
    <bean id="loggingAspect" class="pl.com.bohdziewicz.tutorials.aop.LoggingAspect"/>

    <aop:config>

        <aop:pointcut id="allGettersFromCustomerRepository"
                      expression="execution(* pl.com.bohdziewicz.tutorials.aop.CustomerRepository.get* (..))"/>
        <aop:pointcut id="allAddersFromCustomerReository"
                      expression="execution(* pl.com.bohdziewicz.tutorials.aop.CustomerRepository.add* (..))"/>

        <aop:aspect ref="loggingAspect">
            <aop:before method="logExecution"
                        pointcut-ref="allGettersFromCustomerRepository"/>
            <aop:after-returning method="warnIfNull"
                                 pointcut-ref="allGettersFromCustomerRepository"
                                 returning="returnedValue"/>
            <aop:after-throwing method="serveExceptions" pointcut-ref="allAddersFromCustomerReository"
                                throwing="exception"/>
        </aop:aspect>

    </aop:config>

</beans>